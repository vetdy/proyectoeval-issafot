{
    "openapi": "3.0.0",
    "info": {
        "title": "API Docente",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000"
        }
    ],
    "paths": {
        "/api/docente": {
            "get": {
                "tags": [
                    "Docentes"
                ],
                "summary": "Obtiene una lista de los docentes",
                "operationId": "333fee026ff9e6356de198172c1cbd2c",
                "responses": {
                    "200": {
                        "description": "Lista de docentes"
                    }
                }
            },
            "post": {
                "tags": [
                    "Docentes"
                ],
                "summary": "Crear un nuevo docente",
                "operationId": "6f96b78084ca67a74cdaf2f6463a5a06",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre",
                                    "apellido",
                                    "codigo_sis",
                                    "correo",
                                    "telefono",
                                    "contrasena"
                                ],
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "example": "Juan"
                                    },
                                    "apellido": {
                                        "type": "string",
                                        "example": "Marcos"
                                    },
                                    "codigo_sis": {
                                        "type": "string",
                                        "example": "202503657"
                                    },
                                    "correo": {
                                        "type": "string",
                                        "example": "juan@correo.com"
                                    },
                                    "telefono": {
                                        "type": "string",
                                        "example": "4307845"
                                    },
                                    "contrasena": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Docente creado con éxito"
                    },
                    "422": {
                        "description": "Problemas con los datos ingresados"
                    }
                }
            }
        },
        "/api/docente/{id}": {
            "get": {
                "tags": [
                    "Docentes"
                ],
                "summary": "Mostar un nuevo docente",
                "operationId": "37831e907cc4854634b06b90428f97bd",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del docente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Datos del docente"
                    },
                    "404": {
                        "description": "Docente no encontrado"
                    }
                }
            },
            "put": {
                "tags": [
                    "Docentes"
                ],
                "summary": "Actualizar un nuevo docente",
                "operationId": "8f46da718f5a5078ca5d754deade6559",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del docente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nombre": {
                                        "type": "string",
                                        "example": "Juan"
                                    },
                                    "apellido": {
                                        "type": "string",
                                        "example": "Marcos"
                                    },
                                    "codigo_sis": {
                                        "type": "string",
                                        "example": "202503657"
                                    },
                                    "correo": {
                                        "type": "string",
                                        "example": "juan@correo.com"
                                    },
                                    "telefono": {
                                        "type": "string",
                                        "example": "4307845"
                                    },
                                    "contrasena": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Docente actualizado con éxito"
                    },
                    "404": {
                        "description": "Docente no encontrado"
                    },
                    "422": {
                        "description": "Problemas con los datos ingresados"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Docentes"
                ],
                "summary": "Eliminar un docente",
                "operationId": "bb047d7ca215ccf4f7c48cd3057f18b1",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del docente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Docente eliminado"
                    },
                    "404": {
                        "description": "Docente no encontrado"
                    }
                }
            }
        },
        "/api/empresa": {
            "get": {
                "tags": [
                    "Empresas"
                ],
                "summary": "Obtiene una lista de los docentes",
                "operationId": "8845a5af5b88ec6983c929c36cae3c84",
                "responses": {
                    "200": {
                        "description": "Lista de empresas"
                    }
                }
            },
            "post": {
                "tags": [
                    "Empresas"
                ],
                "summary": "Crear un nueva empresa",
                "operationId": "d4a156853daa20dcfac51eb9b0d186a5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nombre_corto",
                                    "nombre_largo",
                                    "id_usuario",
                                    "correo",
                                    "telefono",
                                    "imagen"
                                ],
                                "properties": {
                                    "nombre_corto": {
                                        "type": "string",
                                        "example": "ISSA"
                                    },
                                    "nombre_largo": {
                                        "type": "string",
                                        "example": "Inovasion de solucion software amigable"
                                    },
                                    "id_usuario": {
                                        "type": "string",
                                        "example": "8"
                                    },
                                    "correo": {
                                        "type": "string",
                                        "example": "ISSA@correo.com"
                                    },
                                    "telefono": {
                                        "type": "string",
                                        "example": "4305445"
                                    },
                                    "imagen": {
                                        "type": "string",
                                        "example": "data:image/png;base64,"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Empresa creada con éxito"
                    },
                    "422": {
                        "description": "Problemas con los datos ingresados"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Docentes",
            "description": "Docentes"
        },
        {
